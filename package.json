{
	"name": "expo-kit",
	"version": "0.0.0",
	"private": true,
	"description": "Production-ready component library for Expo & React Native",
	"keywords": [
		"expo",
		"react-native",
		"component-library",
		"ui-kit",
		"design-system",
		"mobile",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/omercsx/expo-kit.git"
	},
	"author": "Omer Cagri Sayir <omercagris@gmail.com>",
	"license": "MIT",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
		"clean": "turbo run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"prettier": "^3.7.4",
		"turbo": "^2.8.3",
		"typescript": "5.9.2"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
